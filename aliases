# aliases to protect against mistakes (force interactive mode)
alias rm='rm -i'
alias mv='mv -i'
alias cp='cp -i'

# basic command customization aliases
alias df='df -h'

# git aliases
alias gs='git status'
alias gss='git fetch && git status'
alias gca='git commit -a'
alias ga='git add'
alias gd='git icdiff'
alias gl='git log --oneline --decorate --all --graph'

# homeshick aliases
alias ho='homeshick'
alias hocd='homeshick cd'

# directory navigation shortcuts
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# short form aliases - watch out for collisions with existing commands
alias n='nvim'
alias k='kubectl'
alias mgs='mgitstatus ~/repos ~/.homesick/repos'

# grepping aliases
alias esi='env | grep -i $1'
alias hsi='history | grep -i $1'

# tmux aliases
alias ta='tmux attach || tmux new'
alias clp='tmux split-window && exit'
alias tlk='tmux kill-session -a && tmux kill-server'

# misc aliases
alias serve-directory='python3 -m http.server'
alias sud='save "minor edit/housekeeping activity"'
alias rgi='rg -Li'
