# aliases to protect against mistakes (force interactive mode)
alias rm='rm -i'
alias mv='mv -i'
alias cp='cp -i'

# basic command customization aliases
alias df='df -h'

# git aliases
alias gs='git status'
alias gca='git commit -a'
alias gp='git push'
alias gpl='git pull'
alias gpa='git push --tags && git push'
alias ga='git add'
alias gd='git icdiff'
#alias gl="git log --pretty=format:'%C(yellow)%h|%Cred%ad|%Cblue%an|%Cgreen%d %Creset%s' --date=short | column -ts'|' | less -r"
alias gl='git log --oneline --decorate --all --graph'

# homeshick aliases
alias ho='homeshick'
alias hocd='homeshick cd'

# directory navigation shortcuts
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# short form aliases - watch out for collisions with existing commands
alias h='history'
alias s='ssh'
alias n='nvim'
alias k='kubectl'
alias a='ansible'
alias ap='ansible-playbook'
alias mgs='mgitstatus ~/repos ~/.homesick/repos'

# grepping aliases
alias esi='env | grep -i $1'
alias hsi='history | grep -i $1'

# tmux aliases
alias ta='tmux attach || tmux new'
alias clp='tmux split-window && exit'
alias tlk='tmux kill-session -a && tmux kill-server'

# lzt aliases
alias lzl='lzt list'
alias lze='lzt edit'
alias lzr='lzt review'
alias l='lzt'
alias adage='lzt adage'
alias fortune='lzt adage'

# misc aliases
alias serve-directory='python3 -m http.server'
